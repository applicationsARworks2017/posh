<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBG"
    tools:context=".Activity.CartActivity"
    android:id="@+id/rel">
    
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorWhite"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item Name"
                android:id="@+id/it_name"
                android:textSize="15dp"
                android:layout_margin="10dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="20dp"
                android:id="@+id/it_image"
                android:scaleType="fitXY"
                android:layout_below="@id/it_name"
                android:layout_marginLeft="10dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/it_image"
                android:layout_below="@id/it_name"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/lin"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/minus"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/baseline_remove_circle_black_24"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="5dp"
                    />
                <EditText
                    android:id="@+id/et_qnty"
                    android:layout_width="60dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:focusable="false"
                    android:editable="false"
                    android:text="1"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:background="@drawable/custombutton">
                </EditText>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/plus"
                    android:layout_gravity="center_vertical"
                    android:background="@mipmap/baseline_add_circle_black_24"
                    android:backgroundTint="@color/colorPrimary"
                    android:padding="5dp"
                    />
            </LinearLayout>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:id="@+id/it_remove"
                android:background="@mipmap/baseline_delete_black_24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/colorPrimary"/>
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Rs. 1100"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textSize="15dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>