<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryBG">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_close_black_24dp"
            android:padding="10dp"
            android:visibility="gone"
            android:backgroundTint="@color/colorPrimaryDark"
            android:id="@+id/im_close"/>

        <TextView
            android:id="@+id/tv_aded_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/colour_black"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/colorWhite"
            >
            <Button
                android:layout_width="wrap_content"
                android:background="@drawable/customshoping"
                android:textColor="@color/colour_black"
                android:text="CONTINUE SHOPING"
                android:layout_gravity="center"
                android:id="@+id/btn_cont_shpng"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="40dp"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="wrap_content"
                android:background="@drawable/gotocart"
                android:textColor="@color/colorWhite"
                android:text="GO TO CART"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:id="@+id/btn_goto_cart"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_marginLeft="0dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>